{
  "streams": {
    "stream_manager": "hopeit.redis_streams.RedisStreamManager",
    "connection_str": "redis://localhost:6379",
    "delay_auto_start_seconds": 10,
    "initial_backoff_seconds": 1,
    "max_backoff_seconds": 60,
    "num_failures_to_open_circuit_breaker": 1
  },
  "logging": {
    "log_level": "DEBUG",
    "console_only": true
  },
  "auth": {
    "auth_passphrase": "dev-local",
    "secrets_location": ".secrets/",
    "create_keys": true,
    "default_auth_methods": ["Bearer"],
    "domain": "localhost"
  },
  "api": {
    "docs_path": "/api/docs"
  }
}
