          "auth_passphrase": {
            "title": "Auth Passphrase",
            "type": "string"
          },
          "enabled": {
            "default": true,
            "title": "Enabled",
            "type": "boolean"
          },
          "create_keys": {
            "default": false,
            "title": "Create Keys",
            "type": "boolean"
          },
          "domain": {
            "default": null,
